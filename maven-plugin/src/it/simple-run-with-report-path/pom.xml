<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>simple-run-with-report-path</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>@project.artifactId@</artifactId>
        <executions>
          <execution>
            <configuration>
              <files>
                <file>simple-run.http</file>
              </files>
              <report>true</report>
              <reportPath>target/ijhttp-reports</reportPath>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
            <id>simple-run-without-report</id>
          </execution>
        </executions>
        <groupId>@project.groupId@</groupId>
        <version>@project.version@</version>
      </plugin>
      <plugin>
        <artifactId>mockserver-maven-plugin</artifactId>
        <configuration>
          <initializationJson>mock-server.json</initializationJson>
          <serverPort>8080</serverPort>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>runForked</goal>
            </goals>
            <id>pre-integration-test</id>
            <phase>pre-integration-test</phase>
          </execution>
          <execution>
            <goals>
              <goal>stopForked</goal>
            </goals>
            <id>post-integration-test</id>
            <phase>post-integration-test</phase>
          </execution>
        </executions>
        <groupId>org.mock-server</groupId>
        <version>5.15.0</version>
      </plugin>
    </plugins>
  </build>
  <description>A simple IT verifying the basic use case with report and a custom report path.</description>
  <groupId>io.gitlab.vitalijr2.ijhttp-tools.maven-plugin.it</groupId>
  <modelVersion>4.0.0</modelVersion>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <version>1.0-SNAPSHOT</version>
</project>
